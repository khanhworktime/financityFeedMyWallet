<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".introSlider.Slider_1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_slide1"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:backgroundTint="#4F378B"
            android:contentDescription="@string/next"
            app:icon="@drawable/navigate_next"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/tv_slide1_desc"
            app:layout_constraintStart_toStartOf="@+id/tv_slide1_desc"
            app:layout_constraintTop_toBottomOf="@+id/tv_slide1_desc" />

        <ImageView
            android:id="@+id/iv_slide1"
            android:layout_width="300dp"
            android:layout_height="280dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_1" />

        <TextView
            android:id="@+id/tv_slide1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:text="@string/slider_1_title"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/iv_slide1"
            app:layout_constraintStart_toStartOf="@+id/iv_slide1"
            app:layout_constraintTop_toBottomOf="@+id/iv_slide1" />

        <TextView
            android:id="@+id/tv_slide1_desc"
            android:layout_width="243dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:text="@string/slider_1_desc"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/tv_slide1_title"
            app:layout_constraintStart_toStartOf="@+id/tv_slide1_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_slide1_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>